        "oro-flex/batch-bundle": {
            "manifest": {
                "bundles": {
                    "Oro\\Bundle\\BatchBundle\\OroBatchBundle": [
                        "all"
                    ]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/"
                },
                "post-install-output": [
                    "<bg=blue;fg=white>                     </>",
