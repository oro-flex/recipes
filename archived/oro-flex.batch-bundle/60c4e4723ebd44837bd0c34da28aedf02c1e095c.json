            "files": {
                "config/packages/oro_batch.yaml": {
                    "contents": [
                        "doctrine:",
                        "    orm:",
                        "        entity_managers:",
                        "            batch:",
                        "                connection: message_queue",
                        "                mappings:",
                        "                    OroBatchBundle:",
                        "                        mapping: true",
                        "                        is_bundle: true",
                        "                metadata_cache_driver:",
                        "                    type: service",
                        "                    id:   oro_batch.cache.doctrine_metadata",
                        ""
                    ],
                    "executable": false
                }
            },
            "ref": "60c4e4723ebd44837bd0c34da28aedf02c1e095c"
        }
