{
    "manifests": {
        "oro-flex/batch-bundle": {
            "manifest": {
                "bundles": {
                    "Oro\\Bundle\\BatchBundle\\OroBatchBundle": [
                        "all"
                    ]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/"
                },
                "post-install-output": [
                    "<bg=blue;fg=white>                     </>",
                    "<bg=blue;fg=white> Next: Configuration </>",
                    "<bg=blue;fg=white>                     </>",
                    "  * Configure your parameters in <fg=green>config/packages/oro_batch.yaml</>"
                ]
            },
            "files": {
                "config/packages/oro_batch.yaml": {
                    "contents": [
                        "oro_batch:",
                        "    # 'Enables/Disables writing of batch log files for each batch job in var/logs/batch directory'",
                        "    log_batch: false",
                        "    # Sets the time interval to keep the batch job records in the database",
                        "    cleanup_interval: '1 week'",
                        "",
                        "doctrine:",
                        "    dbal:",
                        "        connections:",
                        "            batch:",
                        "                schema_filter: ~akeneo_~",
                        "                url: '%env(resolve:DATABASE_URL)%'",
                        "                charset: UTF8",
                        "    orm:",
                        "        entity_managers:",
                        "            batch:",
                        "                connection: batch",
                        "                mappings:",
                        "                    OroBatchBundle:",
                        "                        mapping: true",
                        "                        is_bundle: true",
                        "                metadata_cache_driver:",
                        "                    type: service",
                        "                    id: oro_batch.cache.doctrine_metadata",
                        ""
                    ],
                    "executable": false
                }
            },
            "ref": "59d0eb176d46f3821547b912320baacd77408c68"
        }
    }
}
