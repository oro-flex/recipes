{
    "manifests": {
        "oro-flex/batch-bundle": {
            "manifest": {
                "bundles": {
                    "Oro\\Bundle\\BatchBundle\\OroBatchBundle": [
                        "all"
                    ]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/"
                },
                "env": {
                    "ORO_BATCH_DATABASE_DRIVER": "pdo_mysql",
                    "ORO_BATCH_DATABASE_HOST": "localhost",
                    "ORO_BATCH_DATABASE_PORT": "3306",
                    "ORO_BATCH_DATABASE_NAME": "oro_database",
                    "ORO_BATCH_DATABASE_USER": "root",
                    "ORO_BATCH_DATABASE_PASSWORD": null,
                    "ORO_BATCH_DATABASE_DRIVER_OPTIONS": []
                },
                "post-install-output": [
                    "<bg=blue;fg=white>                     </>",
                    "<bg=blue;fg=white> Next: Configuration </>",
                    "<bg=blue;fg=white>                     </>",
                    "  * Configure your parameters in <fg=green>config/packages/oro_batch.yaml</>"
                ]
            },
            "files": {
                "config/packages/oro_batch.yaml": {
                    "contents": [
                        "doctrine:",
                        "    dbal:",
                        "        connections:",
                        "            batch:",
                        "                schema_filter: ~akeneo_~",
                        "                driver: '%env(ORO_BATCH_DATABASE_DRIVER)%'",
                        "                host: '%env(ORO_BATCH_DATABASE_HOST)%'",
                        "                port: '%env(ORO_BATCH_DATABASE_PORT)%'",
                        "                dbname: '%env(ORO_BATCH_DATABASE_NAME)%'",
                        "                user: '%env(ORO_BATCH_DATABASE_USER)%'",
                        "                password: '%env(ORO_BATCH_DATABASE_PASSWORD)%'",
                        "                options:  '%env(ORO_BATCH_DATABASE_DRIVER_OPTIONS)%'",
                        "                charset:  UTF8",
                        "    #                server_version: '5.7'",
                        "    orm:",
                        "        entity_managers:",
                        "            batch:",
                        "                connection: batch",
                        "                mappings:",
                        "                    OroBatchBundle:",
                        "                        mapping: true",
                        "                        is_bundle: true",
                        "                metadata_cache_driver:",
                        "                    type: service",
                        "                    id: oro_batch.cache.doctrine_metadata",
                        ""
                    ],
                    "executable": false
                }
            },
            "ref": "a80531d518e648e541cb04ee06a2649693e09b00"
        }
    }
}
